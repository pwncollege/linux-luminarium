#!/usr/bin/env python

import random
import gzip
import re
import os
import subprocess

os.chmod("/challenge/challenge", 0o4711)

FLAG = open("/flag").read().strip()
LETTERS = re.sub("[^a-z]", "", FLAG[FLAG.index('{'):]) + "ab"
NUMBERS = re.sub("[^0-9]", "", FLAG[FLAG.index('{'):]) + "1"
OPT,ARG = LETTERS[:6], NUMBERS[:3]

MAN = "/usr/share/man/man1/" + (LETTERS+NUMBERS)[:10] + ".1.gz"
with gzip.open(MAN, "w") as o:
	o.write((r"""
.TH CHALLENGE "1" "May 2024" "pwn.college" "Challenge Commands"
.SH NAME
/challenge/challenge \- print the flag!
.SH SYNOPSIS
.B challenge
\fI\,OPTION\/\fR
.br
.SH DESCRIPTION
.\" Add any additional description here
.PP
Output the flag when called with the right arguments.
.TP
\fB\-\-fortune\fR
read a fortune
.TP
\fB\-\-version\fR
output version information and exit
.TP
\fB\-\-"""+OPT+r""" NUM\fR
print the flag if NUM is """+ARG+r"""
.SH AUTHOR
Written by Zardus.
.SH "REPORTING BUGS"
The repository for this dojo: <https://github.com/pwncollege/linux-luminarium/>
.SH "SEE ALSO"
man(1) bash-builtins(7)
""").encode())

subprocess.run(["/usr/bin/mandb", "-f", MAN])

os.mkdir("/challenge/bin")
os.symlink("/usr/bin/man", "/challenge/bin/man")
